@inherits LayoutComponentBase

<div class="flex min-h-screen">
    <div class="@GetNavClass() @(showNav ? "" : "hidden")">
        <NavMenu />
    </div>

    <div class="flex-1 bg-gradient-to-r from-white via-blue-50 to-white text-gray-900">
        <header class="bg-white p-4 flex md:hidden border-b border-gray-200">
            <button @onclick="ToggleNav" class="text-gray-700">â˜°</button>
        </header>
        <main class="p-4">
            @Body
        </main>
    </div>
</div>

@code {
    private bool showNav;
    private void ToggleNav() => showNav = !showNav;

    private string GetNavClass()
    {
        var baseClass = "bg-gray-800 text-white w-64 p-4 space-y-2";
        // Add md:block if needed (always true in your original code)
        return $"{baseClass} md:block";
    }
}
